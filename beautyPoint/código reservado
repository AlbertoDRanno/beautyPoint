router.get("/pruebaSession", function (req, res) {
  if (req.session.numeroVisitas === undefined) {
    req.session.numeroVisitas = 0;
  }
  req.session.numeroVisitas++;
  res.send("Session tiene el nro: " + req.session.numeroVisitas);
});

