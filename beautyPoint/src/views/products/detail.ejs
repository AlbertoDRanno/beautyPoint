<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {title: theFiltered.name})%>

<body>
  <%- include('../partials/header.ejs')%>
  <main class="product-main">
    <h3><%= theFiltered.name %></h3>
    <section class="product-section">
      <article class="product-article">
        <img src=<%= theFiltered.image %> alt=<%= theFiltered.name %> />
        <h3>$ <%= toThousand(theFiltered.price) %></h3>
      </article>
      <article class="product-article">
        <!--Descripción-->
        <p>
          <%= theFiltered.description %>
        </p>
        <!--Presentanción-->
        <div><%= theFiltered.package %></div>
        <!--Línea-->
        <div><%= theFiltered.class %></div>
        <div class="product-cart">
                      <button type="submit" value="sumarAlCarrito" class="product-cart-button">
              Agregar al carrito
            </button>
            <input type="number" size="1" />
                </article>
    </section>
      </main>
<%- include('../partials/footer.ejs')%>
</body>

</html>